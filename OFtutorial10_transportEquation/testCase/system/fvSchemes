FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      fvSchemes;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

ddtSchemes
{
    default none;
}

gradSchemes
{
    default none;
    // \beta 的梯度格式
    grad(beta) Gauss linear;
}

divSchemes
{
    default none;
    // 对流项差分格式
	// NOTE: convection of scalars in OpenFOAM is expressed using the flux field rather than cell-centred velocity
	div(phi,beta) bounded Gauss upwind;
}

laplacianSchemes
{
    default none;
    // 拉普拉斯格式，用来计算扩散项 \gamma \nabla^2 \beta
    laplacian(gamma,beta) Gauss linear corrected;
}

interpolationSchemes
{
    default none;
    // U的插值格式，用来计算通量和phi
    interpolate(U) linear;
}

snGradSchemes
{
    default none;
}


// ************************************************************************* //
